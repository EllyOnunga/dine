# Environment Variables Template
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/dine_db

# Server
NODE_ENV=development
PORT=3000

# Session
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Email Service (for reservation confirmations and notifications)
# For Gmail: Use App Password (https://myaccount.google.com/apppasswords)
# For SendGrid: Use API key as password with 'apikey' as username
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password-here
ADMIN_EMAIL=admin@savannahrestaurant.com

# Optional: Monitoring
# SENTRY_DSN=your-sentry-dsn

# Optional: Redis (for caching)
# REDIS_URL=redis://localhost:6379
